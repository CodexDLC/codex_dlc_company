# ═══════════════════════════════════════════
# codex_dlc_company — Production Environment
# ═══════════════════════════════════════════

# === 1. GENERAL ===
ENVIRONMENT=production
DEBUG=False
DOMAIN_NAME=yourdomain.com
SITE_BASE_URL=https://yourdomain.com/

# === 2. DJANGO SETTINGS ===
SECRET_KEY={{DJANGO_SECRET_KEY}}
DJANGO_SETTINGS_MODULE=core.settings.prod
ALLOWED_HOSTS=yourdomain.com,backend

# === 3. POSTGRESQL ===
POSTGRES_DB=codex_dlc_company_db
POSTGRES_USER=codex_dlc_company_user
POSTGRES_PASSWORD={{POSTGRES_PASSWORD}}
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://codex_dlc_company_user:{{POSTGRES_PASSWORD}}@db:5432/codex_dlc_company_db

# === 4. REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD={{REDIS_PASSWORD}}
REDIS_URL=redis://:{{REDIS_PASSWORD}}@redis:6379/0

# === 5. TELEGRAM BOT ===
BOT_TOKEN={{BOT_TOKEN}}
BACKEND_API_URL=http://backend:8000
BACKEND_API_KEY={{BACKEND_API_KEY}}
BOT_API_KEY={{BOT_API_KEY}}

# === 6. WORKERS & EMAIL ===
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=True

# === 7. LOGGING ===
LOG_LEVEL=INFO
